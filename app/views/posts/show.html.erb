<%= render 'users/sidebox', post: @post, user: @user %>

<div class="col-md-8 offset-md-1">
 <h2><%= @user.name %> の投稿</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>投稿者</th>
          <th>場所</th>
          <th>説明</th>
          <th colspan="3"></th>
        </tr>
      </thead>
        
        <tbody>
          <tr>
            <td>
              <%= image_tag @post.get_image, size: "300x300" %>
            </td>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_image, size: "150x150" %><br>
                <%= @user.name %>
              <% end %>
            </td>
            <td><%= @post.title %></td>
            <td><%= @post.body %></td>
            <% if @post.user == current_user %>
              <td><%= link_to "Edit", edit_post_path(@post.id), class: "btn btn-success btn-sm text-white" %></td>
              <td>
                <%= link_to "Destroy", post_path(@post.id), method: "delete", "data-confirm" => "本当に削除しますか？", class: "btn btn-danger btn-sm text-white" %>
            <% end %>  
            </td>
          </tr>
        </tbody>