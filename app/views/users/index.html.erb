<%= render 'users/sidebox', post: @post, user: @user %>
<div class="col-md-8 offset-md-1">
  <h2>アカウント一覧</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>名前</th>
          <th>自己紹介</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_image %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show" ,user_path(user.id) %></td>
          </tr>
        <% end %>
      </tbody>