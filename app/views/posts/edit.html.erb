<% if @post.errors.any? %>
  <%= @post.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>投稿編集</h1>
        <%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>
          <div class="form-group">
            <label for="post_title">画像</label><br>
              <%= image_tag @post.get_image %>
          </div>    
          <div class="form-group">
            <label for="post_title">場所</label><br>
              <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <label for="post_opinion">説明</label><br>
              <%= f.text_area :body %>
          </div>
          <div class="form-group">
            <%= f.submit '更新する', class: 'btn btn-success' %>
          </div>
        <% end %>
          <%= link_to "戻る", post_path(@post.id) %>
    </div>
  </div>
</div>
     