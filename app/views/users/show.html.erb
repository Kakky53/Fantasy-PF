<%= render 'users/sidebox', post: @post, user: @user %>

<div class="col-md-8 offset-md-1">
          <h2><%= @user.name %> の投稿</h2>
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th></th>
                  <th>場所</th>
                  <th>説明</th>
                  <th colspan="3"></th>
                </tr>
              <tbody>
                <% @posts.each do |post| %>
                  <tr>
                    <td>
                      <%= link_to post_path(post.id) do %>
                          <%= image_tag post.get_image, size: "150x150" %>
                      <% end %>
                    </td>
                    <td>
                      <%=  post.title %>
                    </td>
                    <td><%= post.body %></td>
                  </tr>
                <% end %>
              </tbody>