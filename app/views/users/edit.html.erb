<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <body>
      <main>
        <div class="container">
          <div class="row">
            <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
              <h2>プロフィール編集</h2>
                <%= form_with model: @user do |f| %>
                <div class="form-group">
                      <label for="user_image">Image</label><br>
                        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
                  </div>
                  <div class="form-group">
                      <label for="user_name">名前</label><br>
                        <%= f.text_field :name, class: "form-controll name"%>
                  </div>
                  <div class="form-group">
                      <label for="user_introduction">自己紹介</label><br>
                        <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %>
                  </div>
                  <div class="form-group">
                    <%= f.submit "保存", class: "btn btn-secondary"%>
                  </div>
                <% end %>
            </div>
          </div>
        </div>
      </main>
  </body>